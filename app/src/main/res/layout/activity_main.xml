<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/black"
    tools:context=".MainActivity">

<androidx.gridlayout.widget.GridLayout
android:layout_width="match_parent"
android:layout_height="match_parent">

    <Button
        android:id="@+id/Apel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#BC1313"
        android:onClick="buttonTapped"
        android:text="Apel"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/Banana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:backgroundTint="#C4FFC107"
        android:onClick="buttonTapped"
        android:text="Banana"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/Durian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#CDBE3B"
        android:onClick="buttonTapped"
        android:text="Durian"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="1"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/Mangga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:backgroundTint="#7FBF34"
        android:onClick="buttonTapped"
        android:text="Mangga"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="1"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/Melon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D19B57"
        android:onClick="buttonTapped"
        android:text="Melon"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="2"
        app:layout_rowWeight="1" />

<Button
    android:id="@+id/Pir"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pir"
    android:layout_marginStart="10dp"
    app:layout_columnWeight="1"
    app:layout_row="2"
    app:layout_rowWeight="1"
    app:layout_column="1"
    app:layout_gravity="fill"
    android:onClick="buttonTapped" />

    <Button
        android:id="@+id/Rambutan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#C33737"
        android:onClick="buttonTapped"
        android:text="Rambutan"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="3"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/Salak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:backgroundTint="#6A4918"
        android:onClick="buttonTapped"
        android:text="Salak"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="3"
        app:layout_rowWeight="1" />
</androidx.gridlayout.widget.GridLayout>
</RelativeLayout>